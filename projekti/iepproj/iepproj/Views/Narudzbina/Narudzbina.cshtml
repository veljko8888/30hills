@model iepproj.Models.Narudzbina

@{
    ViewBag.Title = "Narudzbina";
}

<h2>Narudzbina</h2>

<div>
    <h4>Narudzbina</h4>
    <hr />
    <dl class="dl-horizontal col-md-6">
        <dt>
            @Html.DisplayNameFor(model => model.CenaPaketa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CenaPaketa)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.BrojTokena)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BrojTokena)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <br />
        <dt>
            Vreme
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumPravljenja)
        </dd>

    </dl>
    <div class="col-md-6" style="text-align:center">
        @if (Model.CenaPaketa == 3)
        {
            <img src="http://www.leadershipwriter.com/wp-content/uploads/2013/08/silver.jpg" alt="Silver" />
        }
        else if (Model.CenaPaketa == 5)
        {
            <img src="http://www.leadershipwriter.com/wp-content/uploads/2013/08/gold.jpg" alt="Gold" />
        }
        else if (Model.CenaPaketa == 10)
        {
            <img src="http://www.celestialhealing.net/websitestuff/buttons/patinum.jpeg" alt="Platinum" />
        }
    </div>
</div>

